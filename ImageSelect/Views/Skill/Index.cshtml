
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using EntityLayer.Concreate
@model List<Skill>
<div class="card-header border-0">
    <h3 class="mt-1">Yetenek Tablosu</h3>
</div>
<!-- Light table -->

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Oran</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach(var item in Model)
            {
                <tr>
                
                <td>
                    @item.SkillID
                </td>
                <td>
                    @item.Title
                </td>
                   
                <td>
                    <div class="d-flex align-items-center">
                        <span class="completion mr-2">@item.Value%</span>
                        <div>
                            <div class="progress">
                                <div class="progress-bar bg-info" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                   <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                   <a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Güncelle</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a href="/Skill/AddSkill" class="btn btn-dark">Yeni Yetenek Ekle</a>
</div>

