@model EntityLayer.Concreate.Portfolio
@{
    ViewData["Title"] = "UpdatePorfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdatePortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yetenek Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.PortfolioID, new { @class = "form-control"  ,  @readonly = true})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel 1</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel 2</label>
                        @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Proje Url</label>
                        @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Platform</label>
                        @Html.TextBoxFor(x => x.Project, new { @class = "form-control" })
                    </div>
                        <div class="form-group">
                        <label>Ücret</label>
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tamamlanma Oranı</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}
